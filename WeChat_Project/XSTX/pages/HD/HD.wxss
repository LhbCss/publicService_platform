.bg_color{
  border: 1rpx solid #f2dea8;
  width: 100%;
  height: 100%;
}
.card{
  border: 1rpx solid rgba(0, 0, 0, 0%);
  /* Alpha：半透明度 */
  background-color: rgba(255, 255, 255, 60%);
  width: auto;
  margin-top: 45rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  height: 500rpx;
  /* ↓半圆角↓ */
  border-radius: 30rpx;
  /* ↓阴影与立体感↓ */
  box-shadow: 1rpx 1rpx 20rpx gray;
  position: relative;
}
.image{
  width: 150rpx;
  height: 150rpx;
  margin: 65.5rpx 15rpx 15rpx 15rpx;
}
.title{
  position: relative;
  left: 175rpx;
  top: -425rpx;
  font-weight: 900;
  margin-right: 175rpx;
}
.date{
  font-size: small;
  position: absolute;
  margin-left: 15rpx;
  bottom: 15rpx;
  font-weight: 600;
}
.info{
  font-size: small;
  margin-left: 175rpx;
  margin-top: -400rpx;
}
