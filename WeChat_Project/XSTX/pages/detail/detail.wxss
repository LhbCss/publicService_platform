page{
  height: 175%;
}
.bg_color{
  width: 100%;
  height: 100%;
  position: relative;
}
.title{
  font-size: x-large;
  font-weight: 900;
  text-align: center;
}
.card{
  margin: 15rpx;
  position: absolute;
  /* Alpha：半透明度 */
  background-color: rgba(255, 255, 255, 75%);
  /* ↓半圆角↓ */
  border-radius: 30rpx;
  /* ↓阴影与立体感↓ */
  box-shadow: 1rpx 1rpx 20rpx gray;
}
.image{
  background-size: cover;
  width: 600rpx;
  height: 600rpx;
  margin: 65.5rpx 15rpx 15rpx 15rpx;
}