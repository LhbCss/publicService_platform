/* pages/deal/deal.wxss */
page{
  height: 100%;
}
.bg_color{
  border: 1rpx solid #f2dea8;
  width: 100%;
  height: 100%;
}
.card{
  border: 1rpx solid rgba(0, 0, 0, 0%);
  /* Alpha：半透明度 */
  background-color: rgba(255, 255, 255, 60%);
  width: auto;
  margin-top: 45rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  height: 425rpx;
  /* ↓半圆角↓ */
  border-radius: 30rpx;
  /* ↓阴影与立体感↓ */
  box-shadow: 1rpx 1rpx 20rpx gray;
  position: relative;
}
.image{
  width: 150rpx;
  height: 150rpx;
  margin: 75rpx 15rpx 15rpx 15rpx;
}
.title{
  position: relative;
  text-align: center;
  font-weight: 900;
  margin-top: -375rpx;
}
.date{
  position: relative;
  margin-left: 175rpx;
  font-weight: 600;
  margin-top: 15rpx;
}
.info{
  font-size: small;
  margin-left: 175rpx;
  position: relative;
  margin-top: 25rpx;
}
